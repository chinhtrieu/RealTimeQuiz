@{
    ViewData["Title"] = "Home Page";
}
<div class="col-md-3"></div>
<div class="text-center col-md-6">
    <form method="post" action="/">
        <div class="form-group">
            <label for="exampleInputEmail1">Enter your unique name</label>
            <input type="text" class="form-control" id="uniqueId" name="uniqueId" placeholder="Enter your unique name">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <p class="form-text">@ViewBag.Message</p>
            }
        </div>       
     
        <button type="submit" class="btn btn-primary">Join Quiz</button>
    </form>
    
</div>
<div class="col-md-3"></div>